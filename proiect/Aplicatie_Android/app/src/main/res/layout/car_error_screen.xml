<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/button4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:drawableStart="@drawable/carwhite"
                android:drawablePadding="20dp"
                android:onClick="changeOil"
                android:text="@string/change_oil_kilometers"
                android:textColor="@color/white" />

            <EditText
                android:layout_gravity="center"
                android:id="@+id/KmOilNew"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">


            <android.widget.Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:onClick="changePads"
                android:textColor="@color/white"
                android:drawableStart="@drawable/discwhite"
                android:drawablePadding="20dp"
                android:text="Change braking pads km" />

            <EditText
                android:id="@+id/KmPadsNew"
android:layout_gravity="center"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">


            <android.widget.Button
                android:id="@+id/button6"
android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:text="@string/show_error_history"
                android:onClick="ads"
                android:padding="20dp"
                android:drawableStart="@drawable/warningwhite"
                android:drawablePadding="20dp"
                />
            <Spinner
                android:layout_gravity="center"
                android:id="@+id/spinner1"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:id="@+id/recyvleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</ScrollView>


