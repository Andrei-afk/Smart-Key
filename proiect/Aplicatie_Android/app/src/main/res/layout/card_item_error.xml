<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="30dp"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:background="@drawable/custom_err_card"
    android:padding="5dp"
    >


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/carBrandModelCard"
            android:layout_width="132dp"
            android:layout_height="43dp"
            android:gravity="left"
            android:maxLines="2"
            android:text="carBrandModel"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/carDateCard"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="DATA"
            android:textColor="@color/black" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        >
        <TextView
            android:id="@+id/carErrorNameCard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ERROR NAME"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/carErrorMsgCard"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            android:maxLines="4"
            android:text="error msg"
            android:textColor="@color/black"/>
      />


    </LinearLayout>


</LinearLayout>